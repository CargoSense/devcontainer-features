{
  "name": "APT Packages",
  "id": "apt-packages",
  "version": "1.0.3",
  "description": "Install programs using the apt package manager.",
  "documentationURL": "https://github.com/CargoSense/devcontainer-features/tree/main/src/apt-packages",
  "licenseURL": "https://github.com/CargoSense/devcontainer-features/blob/main/LICENSE",
  "options": {
    "packages": {
      "type": "string",
      "description": "A space-separated list of packages to install.",
      "proposals": ["build-essential", "curl ca-certificates", "htop"],
      "default": ""
    }
  },
  "installsAfter": [
    "ghcr.io/devcontainers/features/common-utils"
  ]
}
